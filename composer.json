{
    "name": "shrikeh/cqrs",
    "description": "Contracts for CQRS-style applications",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Barney Hanlon",
            "email": "symfony@shrikeh.net"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "brianium/paratest": "^7.14",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "deptrac/deptrac": "^4.2",
        "ergebnis/composer-normalize": "^2.48",
        "friends-of-behat/service-container-extension": "^1.1",
        "infection/infection": "^0.29.14",
        "jangregor/phpstan-prophecy": "^2.2",
        "nunomaduro/collision": "^8.8",
        "nunomaduro/collision-adapter-symfony": "^1.3",
        "php-ds/php-ds": "^1.7",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpmd/phpmd": "^2.15",
        "phpmetrics/phpmetrics": "^2.9",
        "phpro/grumphp-shim": "^2.15",
        "phpspec/prophecy-phpunit": "^2.4",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4",
        "povils/phpmnd": "^3.6",
        "rector/rector": "^2.2",
        "roave/infection-static-analysis-plugin": "^1.39",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^8.24",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/dotenv": "^7.3",
        "vimeo/psalm": "^6.13"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Shrikeh\\Cqrs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "phpro/grumphp-shim": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "behat": "php vendor/bin/behat",
        "hooks": "php vendor/bin/grumphp --ansi git:init",
        "infection": [
            "@phpunit",
            "@infection-coverage"
        ],
        "infection-coverage": "php -d zend_extension=xdebug.so vendor/bin/infection --skip-initial-tests --coverage=${BUILD_DIR:-./.build}/coverage --show-mutations --threads=${INFECTION_THREADS:-8}  --min-covered-msi=${MIN_COVERED_MSI:-100}",
        "install-codestandards": [
            "PHPCSStandards\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "lint": "vendor/bin/parallel-lint --colors ./src ./tests",
        "magic-numbers": [
            "@phpmnd"
        ],
        "metrics": "php -d 'error_reporting=E_ALL ^ E_DEPRECATED' vendor/bin/phpmetrics --config=${PHPMETRICS_CONFIG:-phpmetrics.yml}",
        "phparkitect": "vendor/bin/architect check",
        "phpcbf": "vendor/bin/phpcbf",
        "phpcs": "vendor/bin/phpcs --colors src",
        "phpmd": "php -d 'error_reporting=E_ALL ^ E_DEPRECATED' vendor/bin/phpmd ./src text ${PHPMD_CONFIG:-./phpmd.dist.xml}",
        "phpmnd": "vendor/bin/phpmnd --strings --progress ./src tests",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=-1 -c ${PHPSTAN_CONFIG:-phpstan.dist.neon}",
        "phpunit": "php ${PHPUNIT_BIN:-vendor/bin/paratest} --coverage-text ${PHPUNIT_CONFIG_OPTIONS:-} --configuration=${PHPUNIT_CONFIG:-phpunit.dist.xml}",
        "psalm": "vendor/bin/psalm",
        "rector": "vendor/bin/rector",
        "setup": [
            "composer install",
            "@hooks",
            "@test"
        ],
        "test": [
            "@lint",
            "@phpmnd",
            "@phpunit",
            "@infection-coverage",
            "@phpcs",
            "@phpmd",
            "@phpstan"
        ]
    }
}
